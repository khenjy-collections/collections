<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gambar"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teknik Perangkat Lunak"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/hitungnilai"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:text="Perhitungan Nilai"
            android:textColor="@color/colorAccent"

            app:backgroundTint="@color/colorPrimaryDark"
             />

        <Button
            android:id="@+id/webtpl"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="230dp"
            android:text="Webview TPL"
            android:textColor="@color/warm"

            app:backgroundTint="@color/cool"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp">
        <Button
            android:id="@+id/dsn"
            android:layout_width="wrap_content "
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:text="Dosen"
            android:backgroundTint="@color/colorAccent"
            />
        <Button
            android:id="@+id/mhs"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="230dp"
            android:text="Mahasiswa"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp">
        <Button
            android:id="@+id/emas"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:text="Hitung Emas"
            android:backgroundTint="@color/warm"
            />

    </RelativeLayout>

</LinearLayout>