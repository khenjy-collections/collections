<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edittext">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"

        android:background="#3F51B5" >

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            android:layout_marginLeft="15dp"

            android:src="@drawable/back_icon"
            android:clickable="true"
            android:focusable="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaji"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"


            />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:text="Hitung Gaji"
                android:textStyle="bold"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/editnama"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Nama"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="81dp" />

            <EditText
                android:id="@+id/editgaji"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Gaji Pokok"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittunjangan"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Tunjangan"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="201dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pajak 5%"
                android:textStyle="bold"
                android:ems="10"/>






            <Button
                android:id="@+id/hitung"
                android:layout_width="162dp"
                android:layout_height="65dp"
                android:backgroundTint="#7194FB"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:text="Hitung" />

            <EditText
                android:id="@+id/hasilnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nama" />

            <EditText
                android:id="@+id/hasilgajipokok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Gaji Pokok" />

            <EditText
                android:id="@+id/hasiltunjangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Tunjangan" />
            <EditText
                android:id="@+id/totalgaji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Total Gaji" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>